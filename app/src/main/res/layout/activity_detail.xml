        <TextView
            android:id="@+id/period_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/dartblue"
            android:layout_marginTop="10dp"
            android:text="유효기간:"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_text" />


        <TextView
            android:id="@+id/detail_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dartblue"
            android:text="2020.01.01"
            app:layout_constraintStart_toEndOf="@+id/period_text"
            app:layout_constraintTop_toBottomOf="@+id/day_text" />
            -->
        <TextView
            android:id="@+id/detail_period_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dartblue"
            android:text="2020.01.01"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type_om"/>

        <TextView
            android:id="@+id/wave_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="~"
            android:textColor="@color/dartblue"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/detail_period_start"
            app:layout_constraintBottom_toBottomOf="@id/detail_period_start"/>
        <TextView
            android:id="@+id/detail_period_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/dartblue"
            android:text="2020.12.12"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/wave_text"
            app:layout_constraintBottom_toBottomOf="@id/wave_text"/>
        <TextView
            android:id="@+id/detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="원데이 렌즈는 반드시 한번만 사용해주세요.\n일반형 1회용 렌즈는 보통 8시간의 착용시간을 권장합니다.\n실리콘 하이드로겔 소재의 렌즈는 12시간에서 14시간가지도\n 착용이 가능합니다.
            "
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_period_start"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>