<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Monthly">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:background="#D265B0E2"
                android:orientation="vertical" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_background">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:id="@+id/month_title_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="기간 렌즈"
                                android:textColor="#000000"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/month_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_title_text"
                                android:layout_marginTop="20dp"
                                android:text="렌즈 이름"
                                android:textColor="@color/dartblue"
                                android:textSize="23sp" />

                            <EditText
                                android:id="@+id/Monthly_name"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_name_text"
                                android:layout_marginTop="4dp"
                                android:hint="ex) 악마 홀로리스 원데이 "
                                android:inputType="text"
                                android:textColor="#29367A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/month_type_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/Monthly_name"
                                android:layout_marginTop="10dp"
                                android:text="렌즈 유형"
                                android:textColor="@color/dartblue"
                                android:textSize="23sp" />

                            <EditText
                                android:id="@+id/Monthly_type"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_type_text"
                                android:layout_marginTop="4dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="ex)소프트렌즈"
                                android:textColor="#29367A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/month_period_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/Monthly_type"
                                android:layout_marginTop="10dp"
                                android:text="착용기간"
                                android:textColor="@color/dartblue"
                                android:textSize="24sp" />

                            <EditText
                                android:id="@+id/Monthly_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_period_text"
                                android:layout_marginTop="4dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="yyyy/mm/dd"
                                android:textColor="#29367A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/wave_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_period_text"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="16dp"
                                android:layout_toRightOf="@id/Monthly_start"
                                android:text="~"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/Monthly_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_period_text"
                                android:layout_toRightOf="@id/wave_text"
                                android:layout_marginTop="4dp"
                                android:clickable="true"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="yyyy/mm/dd"
                                android:textColor="#29367A"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/month_color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/Monthly_start"
                                android:layout_marginTop="10dp"
                                android:text="색상"
                                android:textColor="@color/dartblue"
                                android:textSize="23sp" />

                            <Button
                                android:id="@+id/Monthly_color"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/month_color_text"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/pallete" />

                            <Button
                                android:id="@+id/Monthly_save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="30dp"
                                android:background="@color/color"
                                android:text="저장"
                                android:textSize="30sp"
                                android:textColor="@color/white"
                                />

                            <Button
                                android:id="@+id/to_main"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/close"
                                android:backgroundTint="@color/dartblue"/>

                        </RelativeLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>